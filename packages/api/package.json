{
  "name": "@period-tracker-app/api",
  "version": "0.0.1",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "build": "tsc && yarn run copy-static-assets",
    "clean": "shx rm -rf dist/*",
    "compile": "yarn run build",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "format": "prettier --write '{.,src/**}/*.{js,jsx,ts,tsx}'",
    "lint": "tslint -p .",
    "start": "yarn run serve",
    "serve": "NODE_PATH=./dist node dist/index.js",
    "test": "NODE_PATH=./src jest --forceExit --coverage --verbose",
    "watch": "nodemon --legacy-watch --watch src -e ts,ejs --exec NODE_PATH=./src ts-node ./src/index",
    "watch-test": "yarn run test -- --watchAll"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.13",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/multer": "^1.3.7",
    "@types/node": "^12.0.4",
    "@types/shelljs": "^0.8.5",
    "@types/uuid": "^3.4.4",
    "concurrently": "^4.1.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "shelljs": "^0.8.3",
    "shx": "^0.3.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.2.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "@period-tracker-app/core": "*",
    "bcrypt": "^3.0.6",
    "body-parse": "^0.1.0",
    "class-validator": "^0.8.1",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.0.0",
    "ejs": "^2.6.1",
    "emoji-regex": "^8.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.1",
    "pg": "^7.11.0",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.7.7",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.18",
    "typeorm-typedi-extensions": "^0.2.3",
    "uuid": "^3.3.2"
  }
}
